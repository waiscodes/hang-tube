{
  "manifest_version": 3,
  "name": "Hang Tube",
  "version": "1.0.0",
  "description": "A Chrome extension built with Manifest V3",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://127.0.0.1/*",
    "http://localhost/*"
  ],
  "action": {
    "default_popup": "html/popup.html"
  },
  "background": {
    "service_worker": "js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["js/content.js"]
    }
  ],
  "options_page": "html/options.html"
}

